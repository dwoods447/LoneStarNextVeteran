<!-- Begin Flash Notice -->
<div class="row">

  <div class="col-lg-12 col-md-12 col-sm-12">
    <% if !flash[:notice].blank? %>

        <div class="notice" >
          <h2><%= flash[:notice] %></h2>
        </div>

    <% end %>
  </div>
</div>

<!-- End Flash Notice -->

<h1 class="header-message">Please enter the <strong>Student ID</strong> number.</h1>
<%= form_tag(admin_search_students_search_student_path, :method => :post, :class => 'searchbox') do%>
    <div class="input-group">
      <%= text_field_tag(:student_id, params[:student_id], class: 'form-control', placeholder: 'Enter the Student ID', :id => 'student_id')%>
      <div class="input-group-btn">
        <%= button_tag("Search", class: 'btn btn-default', :id => 'submit')  do%>
            <i class="glyphicon glyphicon-search"></i>
        <%end%>
      </div>
    </div>
<%end%>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <%= link_to student_kiosk_index_path do %>
        <span class="back-link-style"><strong>GO BACK</strong>&nbsp;<i class="fa fa-arrow-left" aria-hidden="true"></i></span>
    <%end %>
  </div>
</div>

